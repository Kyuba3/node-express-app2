<h2>Contact me</h2>

  {{#if isSent}}
    <div class="isSent">
      The message has been sent!
      File {{ fileName }} has been sent!
    </div>
  {{/if}}

  {{#if isError}}
    <div class="isError">
      You can't leave empty fields
    </div>
  {{/if}}

  {{#if fileName}}
    <img src="/images/uploads/{{ fileName }}">
  {{/if}}

<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input type="file" name="file" accept=".jpg, .png, .jpeg, .gif"> 
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>